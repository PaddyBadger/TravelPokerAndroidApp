<com.travelpoker.app.parallaxview.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:inner_parallax_factor="1.9"
    app:parallax_factor="1.9"
    app:parallax_views_num="3"
    tools:context=".DeckFragmentActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/deckFragment"
        >
        <fragment
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/deckMap"
            android:name="com.google.android.gms.maps.MapFragment"
            tools:layout="@layout/deck_fragment" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/deckDescription"
            style="@android:style/TextAppearance.Small"
            android:padding="@dimen/activity_horizontal_margin"/>
        <GridView
            android:id="@+id/deckCardGridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnWidth="180dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            tools:context=".DeckFragmentActivity">
        </GridView>
    </LinearLayout>
</com.travelpoker.app.parallaxview.ParallaxScrollView>